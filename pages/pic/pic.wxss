.camera {
  width: 100%;
  height: 100vh;
  border-radius: 50%;
  margin: 0 auto 0;
  position: relative;
}

.camera image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 10;
}

.camera camera {
  width: 100%;
  height: 100%;
}

.an{
  display: flex;
	flex-direction: row;
	align-items: center;
	flex-wrap: wrap;
	justify-content:space-evenly;
}
button.takePhoto:not([size='mini']) {
  background-color: rgba(121, 121, 121, 0.623);
  display: flex;
  float: center;
  bottom: 110px;
  /*margin-right: 23%;*/
  width: 60px;
  height: 60px;
  border-radius: 30px;
}

.takePhoto image{
  width: 100%;
  height: 100%;
}

button.takeLocalPhoto{
  display: flex;
  float: right;
  bottom: 110px;
  /*margin-right: 20px;*/
  background-color: rgba(121, 121, 121, 0.623);
  width: 60px;
  height: 60px;
  border-radius: 30px;
}
.takeLocalPhoto image{
  width: 100%;
  height: 100%;
  
}
